<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MapsActivity"
    android:weightSum="5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/colorBlack"

        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/emergencyContactButton"
            android:text="Emergency Contact"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_dark"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="selectEmergencyContact"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/emergencyButton"
            android:text="EMERGENCY"
            android:textColor="@color/colorYellow"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:onClick="triggerEmergency"
            android:padding="2dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/settingsButton"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Settings"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_dark"
            android:textSize="15dp"
            android:onClick="openSettings"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:background="@color/colorBlack">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_red"
            android:id="@+id/connectionStatusBar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/colorBlack"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:id="@+id/startPointButton"
            android:text="Start"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_dark"
            android:layout_gravity="center"
            android:onClick="startPoint" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:id="@+id/endPointButton"
            android:text="End"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_dark"
            android:layout_gravity="center"
            android:onClick="endPoint" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/zoomOutButton"
            android:text="-"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_dark"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:onClick="zoomOutButtonClick" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/zoomInButton"
            android:text="+"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_dark"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:onClick="zoomInButtonClick" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cameraLockButton"
            android:layout_weight="1.2"
            android:text="Camera \nLocked"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_blue"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:onClick="cameraFollowToggle"/>
    </LinearLayout>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.45"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/colorBlack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/button_dark"
        
            android:orientation="horizontal"
            android:weightSum="3" >
        
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical"
                android:weightSum="2"   >
            
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/latText"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Latitude"
                    android:textColor="@color/colorWhite"/>
            
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/latitude"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="End Run"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/button_blue"
                android:textColor="@color/colorYellow"
                android:id="@+id/endRunButton"
                android:onClick="EndRun"    />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical"
                android:weightSum="2"   >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/lonText"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="Longitude"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/longitude"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>