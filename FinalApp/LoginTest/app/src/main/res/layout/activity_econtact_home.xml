<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    android:weightSum="11"
    tools:context="com.example.nikig.logintest.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorBGgrey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBGgrey">

            <TextView
                android:id="@+id/eContactWelcome"
                android:paddingLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="40dp"
                tools:text="Testing" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorBGgrey"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Guardian:\nKeeping Runners Safe"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorWhite">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/runner"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorBlack"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/showRunnerLocationButton"
            android:layout_weight="1.5"
            android:text="Locate Runner"
            android:textSize="30dp"
            android:layout_margin="2dp"
            android:textColor="@color/colorYellow"
            android:background="@drawable/button_green"
            android:onClick="locateRunner" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/quickViewRunnerButton"
            android:layout_weight="1.5"
            android:text="Quick\nRunner\nInfo"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_dark" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/contactLogOutButton"
        android:layout_weight="1"
        android:text="Log Out"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_dark"/>
</LinearLayout>

